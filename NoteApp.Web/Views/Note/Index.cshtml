@model NoteApp.Core.Entities.NoteViewModel
@using Humanizer

@{
    ViewData["Title"] = "Manage your note list";
}

<div class="todo-panel">
    <div>@ViewData["Title"]</div>

    <table class= "table table-hover">
        <thead>
            <tr>
                <td>&#x2714;</td>
                <td>Item</td>
                <td>Due</td>
            </tr>
        </thead>

        @foreach (var item in Model.Notes)
        {
            <tr>
                <td>
                    <input type="checkbox" class="done-checkbox">
                </td>
                <td>@item.Title</td>
                <td>@item.TimeToComplete.Humanize()</td>
            </tr>
        }
    </table>

    <div>
        <!-- TODO: Add item form -->
    </div>
</div>